<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #313606c8;
            color: #333;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 390vh;
        }
        .container {
            width: 90%;
            max-width: 1200px;
            padding: 30px;
            background-color: rgba(239, 230, 114, 0.838);
            box-shadow: 0 2px 4px rgba(239, 230, 114, 0.838);
            border-radius: 8px;
        }
        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
        }
        .grid-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
        }
        .course-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            background-color: #e4e09a;
            transition: transform 0.3s ease;
        }
        .course-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .course-card h3 {
            color: #555;
        }
        .video-container {
            margin-top: 20px;
            position: relative;
            padding-bottom: 56.25%; /* 16:9 aspect ratio for responsive iframe */
            overflow: hidden;
        }
        iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0;
        }
        .link-button {
            display: inline-block;
            padding: 8px 16px;
            margin-top: 12px;
            color: #fff;
            background-color: #8e5328;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }
        .link-button:hover {
            background-color: #0056b3;
        }
        .logout-btn {
            text-align: center;
            margin-top: 30px;
        }
        /* Style for Student Profile button */
        .profile-button {
            position: absolute;
            top: 60px;
            left: 1200px;
            padding: 10px 20px;
            color: #fff;
            background-color: #8e5328;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .profile-button:hover {
            background-color: #0056b3;
        }
        .profile-popup-content {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Student Profile button -->
        <button class="profile-button">Student Profile</button>
        <h1>Welcome to the Dashboard</h1>
        <div class="grid-container">
            <% courses.forEach(course => { %>
                <div class="course-card">
                    <h3><%= course.course_title %></h3>
                    <p><strong>Teacher:</strong> <%= course.teacher_name %></p>
                    <div class="video-container">
                        <iframe src="<%= course.youtube_link %>" frameborder="0" allowfullscreen></iframe>
                    </div>
                    <p><a href="<%= course.drive_link %>" class="link-button">View Notes</a>
                    <a href="<%= course.quiz_link %>" class="link-button">Take Quiz</a></p>
                    <p><strong>Score:</strong> <%= course.score %></p>
                    <p><strong>Meeting ID:</strong> <%= course.meeting_id %></p>
                    <p><strong>Meeting Time:</strong> <%= course.meeting_time %></p>
                    <p><a href="https://zoom.us/" class="link-button">Join Live Class</a></p>
                </div>
            <% }); %>
        </div>
        
        <!-- Logout button -->
        <form action="/logout" method="POST" class="logout-btn">
            <button type="submit" class="link-button">Logout</button>
        </form>
    </div>
</body>
</html>
